{% extends 'lampadaire/base.html.twig' %}

{% block content %}
    <h2>Lampadaire Details</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lampadaire.id }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ lampadaire.localisation }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ lampadaire.etat ? 'On' : 'Off' }}</td>
            </tr>
            <tr>
                <th>Consommation</th>
                <td>{{ lampadaire.consommation }}</td>
            </tr>
            <tr>
                <th>Quartier ID</th>
                <td>{{ lampadaire.idQuartier }}</td>
            </tr>
            <tr>
                <th>Installation Date</th>
                <td>{{ lampadaire.dateInstallation ? lampadaire.dateInstallation|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_lampadaire_edit', {'id': lampadaire.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('app_lampadaire_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}