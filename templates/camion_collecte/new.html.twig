{# templates/camion_collecte/new.html.twig #}

{% extends 'baseBack.html.twig' %}

{% block title %}Ajouter un Nouveau Camion de Collecte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .purple-theme {
            background: linear-gradient(135deg, #f5f7ff 0%, #f5effb 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }
        
        .card-header {
            background: linear-gradient(90deg, #7e57c2 0%, #673ab7 100%);
            color: white;
            border: none;
        }
        
        .btn-purple {
            background-color: #673ab7;
            border-color: #5e35b1;
            color: white;
        }
        
        .btn-purple:hover {
            background-color: #5e35b1;
            border-color: #512da8;
            color: white;
        }
        
        .btn-outline-purple {
            color: #673ab7;
            border-color: #673ab7;
        }
        
        .btn-outline-purple:hover {
            background-color: #673ab7;
            color: white;
        }
        
        .page-title {
            color: #512da8;
            font-weight: 600;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid #673ab7;
            padding-bottom: 0.5rem;
        }
        
        .form-control:focus {
            border-color: #9575cd;
            box-shadow: 0 0 0 0.25rem rgba(103, 58, 183, 0.25);
        }
        
        .form-label {
            color: #512da8;
            font-weight: 500;
        }
        
        .card {
            box-shadow: 0 4px 20px rgba(103, 58, 183, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
<div class="purple-theme">
    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <h1 class="page-title">
                    <i class="fas fa-truck me-2"></i>Ajouter un Nouveau Camion de Collecte
                </h1>
            </div>
        </div>
        
        <div class="card shadow-lg">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Nouvelle Fiche Camion
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.modele, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.modele, {'attr': {'class': 'form-control', 'placeholder': 'Modèle du camion'}}) }}
                                {{ form_errors(form.modele) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.immatriculation, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.immatriculation, {'attr': {'class': 'form-control', 'placeholder': 'Plaque d\'immatriculation'}}) }}
                                {{ form_errors(form.immatriculation) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.capaciteMax, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.capaciteMax, {'attr': {'class': 'form-control', 'placeholder': 'Capacité maximale en kg'}}) }}
                                {{ form_errors(form.capaciteMax) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.statut) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.zoneId, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.zoneId, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.zoneId) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.kilometrage, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.kilometrage, {'attr': {'class': 'form-control', 'placeholder': 'Kilométrage actuel'}}) }}
                                {{ form_errors(form.kilometrage) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_camion_collecte_index') }}" class="btn btn-outline-purple">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                        <div class="btn-group">
                            <button type="submit" class="btn btn-purple">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                            <button type="reset" class="btn btn-outline-secondary">
                                <i class="fas fa-undo me-2"></i>Réinitialiser
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add any initialization scripts here
            // Example: Auto-format immatriculation
            document.getElementById('{{ form.immatriculation.vars.id }}').addEventListener('input', function(e) {
                this.value = this.value.toUpperCase();
            });
        });
    </script>
{% endblock %}