{% extends 'baseBack.html.twig' %}

{% block title %}Ajouter un Nouveau Camion de Collecte{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un Nouveau Camion de Collecte</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.modele) }}
                    {{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.modele) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.immatriculation) }}
                    {{ form_widget(form.immatriculation, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.immatriculation) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.capaciteMax) }}
                    {{ form_widget(form.capaciteMax, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.capaciteMax) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.statut) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.statut) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.zoneId) }}
                    {{ form_widget(form.zoneId, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.zoneId) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.kilometrage) }}
                    {{ form_widget(form.kilometrage, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.kilometrage) }}
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}