{% extends 'baseBack.html.twig' %}

{% block title %}Gestion des Camions de Collecte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .purple-theme {
            background: linear-gradient(135deg, #f5f7ff 0%, #f5effb 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }
        
        .card-header {
            background: linear-gradient(90deg, #7e57c2 0%, #673ab7 100%);
            color: white;
            border: none;
        }
        
        .table thead th {
            background-color: #9575cd;
            color: white;
            border-color: #7e57c2;
        }
        
        .btn-purple {
            background-color: #673ab7;
            border-color: #5e35b1;
            color: white;
        }
        
        .btn-purple:hover {
            background-color: #5e35b1;
            border-color: #512da8;
            color: white;
        }
        
        .btn-outline-purple {
            color: #673ab7;
            border-color: #673ab7;
        }
        
        .btn-outline-purple:hover {
            background-color: #673ab7;
            color: white;
        }
        
        .action-btn {
            margin: 0 3px;
        }
        
        .page-title {
            color: #512da8;
            font-weight: 600;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid #673ab7;
            padding-bottom: 0.5rem;
        }
        
        .badge-purple {
            background-color: #673ab7;
            color: white;
        }
        
        .status-active {
            color: #388e3c;
            font-weight: bold;
        }
        
        .status-inactive {
            color: #d32f2f;
            font-weight: bold;
        }
        
        .status-maintenance {
            color: #ff8f00;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
<div class="purple-theme">
    <div class="container">
        <div class="row mb-4">
            <div class="col">
                <h1 class="page-title">
                    <i class="fas fa-truck me-2"></i>Gestion des Camions de Collecte
                </h1>
            </div>
        </div>
        
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Liste des Camions
                </h5>
                <a href="{{ path('app_camion_collecte_new') }}" class="btn btn-purple">
                    <i class="fas fa-plus me-2"></i>Ajouter un camion
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Modèle</th>
                                <th>Immatriculation</th>
                                <th>Capacité max</th>
                                <th>Statut</th>
                                <th>Zone ID</th>
                                <th>Kilométrage</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for camion_collecte in camion_collectes %}
                                <tr>
                                    <td>
                                        <span class="badge badge-purple">#{{ camion_collecte.id }}</span>
                                    </td>
                                    <td>
                                        <strong>{{ camion_collecte.modele }}</strong>
                                    </td>
                                    <td>{{ camion_collecte.immatriculation }}</td>
                                    <td>{{ camion_collecte.capaciteMax }}</td>
                                    <td>
                                        {% if camion_collecte.statut == 'Actif' %}
                                            <span class="status-active">{{ camion_collecte.statut }}</span>
                                        {% elseif camion_collecte.statut == 'En maintenance' %}
                                            <span class="status-maintenance">{{ camion_collecte.statut }}</span>
                                        {% else %}
                                            <span class="status-inactive">{{ camion_collecte.statut }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ camion_collecte.zoneId }}</td>
                                    <td>{{ camion_collecte.kilometrage }} km</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_camion_collecte_show', {'id': camion_collecte.id}) }}" class="btn btn-sm btn-outline-info action-btn" data-bs-toggle="tooltip" title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_camion_collecte_edit', {'id': camion_collecte.id}) }}" class="btn btn-sm btn-outline-purple action-btn" data-bs-toggle="tooltip" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_camion_collecte_delete', {'id': camion_collecte.id}) }}" style="display: inline-block;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ camion_collecte.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger action-btn" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce camion?')" data-bs-toggle="tooltip" title="Supprimer">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center py-3">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle me-2"></i>Aucun camion trouvé. Ajoutez votre premier camion !
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Total: {{ camion_collectes|length }} camion(s)</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
{% endblock %}