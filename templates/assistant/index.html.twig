{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <br>
    <br>
    <br>
    <br>
    <br>
    <h1 class="mb-4">Assistant Documentaire List</h1>

    <a href="{{ path('assistantdocumentaire_new') }}" class="btn btn-primary mb-3">Create New</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Type Assistance</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for assistant in assistants %}
            <tr>
                <td>{{ assistant.typeAssistance }}</td>
                <td>{{ assistant.dateDemande ? assistant.dateDemande|date('Y-m-d') : '' }}</td>
                <td>{{ assistant.status }}</td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('assistantdocumentaire_show', {'id': assistant.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('assistantdocumentaire_edit', {'id': assistant.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('assistantdocumentaire_delete', {'id': assistant.id}) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assistant.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                        <!-- Add a Generate PDF button -->
                        <a href="{{ path('assistantdocumentaire_pdf', {'id': assistant.id}) }}" target="_blank" class="btn btn-success btn-sm">Generate PDF</a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}