<form method="post" 
      action="{{ path('assistant_delete', {'id': assistant.id}) }}" 
      onsubmit="return confirm('Confirmer la suppression ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assistant.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="bi bi-trash"></i>
    </button>
</form>