{% extends 'base.html.twig' %}

{% block title %}Quartiers publics{% endblock %}

{% block body %}
<div class="body">
    <div role="main" class="main px-3 px-lg-5">
        <div class="container mt-5">
            <div class="page-header py-0 px-3 px-xl-0 border-radius-2 p-relative mb-5" style="background-color:rgb(166, 146, 253)">
                <div class="overflow-hidden p-absolute top-0 left-0 bottom-0 h-100 w-100">
                    <div class="custom-el-5 custom-pos-4">
                        <img class="img-fluid opacity-2 opacity-hover-2" src="{{ asset('img/demos/accounting-1/svg/waves.svg') }}" alt="">
                    </div>
                </div>
                <div class="container p-relative z-index-1 py-2">
                    <div class="row align-items-center py-4">
                        <div class="col-8 col-md-7">
                            <div class="appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="0">
                                <span class="badge bg-color-dark-rgba-10 text-light rounded-pill text-uppercase font-weight-semibold text-2-5 px-3 py-2 px-4 mb-3">
                                    <span class="d-inline-flex py-1 px-2">Quartiers</span>
                                </span>
                            </div>
                            <div class="appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="200">
                                <h1 class="text-dark text-9 text-lg-12 font-weight-semibold line-height-1 mb-2">Liste des Quartiers</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- üì¶ Liste des quartiers -->
            <div class="card shadow-sm p-4 border-0 rounded-4">
                {% if quartiers is not empty %}
                    <div class="row">
                        {% for quartier in quartiers %}
                            <div class="col-lg-4 col-md-4 col-sm-12 mb-4 pb-1">
                                <div class="box-shadow-7 border-radius-2 overflow-hidden">
                                    <span class="thumb-info thumb-info-no-overlay thumb-info-show-hidden-content-hover">
                                        <span class="thumb-info-wrapper overlay overlay-show overlay-gradient-bottom-content border-radius-0 rounded-top">
                                            <a href="{{ path('app_quartier_show', {'id': quartier.id}) }}" title="Voir D√©tails">
                                                <img src="https://dummyimage.com/600x400/cccccc/000000&text={{ quartier.lampadaireCount }}+Lampadaires" alt="{{ quartier.lampadaireCount }} Lampadaires" class="img-fluid rounded" style="max-width: 100%;">
                                            </a>
                                        </span>
                                        <span class="thumb-info-content">
                                            <span class="thumb-info-content-inner bg-light p-4">
                                                <h4 class="text-5 mb-2">{{ quartier.nom }}</h4>
                                                <p class="line-height-7 text-3 mb-3"><strong>ID :</strong> #{{ quartier.id }}</p>
                                                <p class="line-height-7 text-3 mb-3"><strong>Consommation Totale :</strong> {{ quartier.consomTot }} kWh</p>
                                                <p class="line-height-7 text-3 mb-3"><strong>Nombre de Lampadaires :</strong> {{ quartier.lampadaireCount }}</p>
                                                <div class="mt-3">
                                                    <a href="{{ path('app_quartier_show', {'id': quartier.id}) }}" class="btn btn-primary btn-sm">Voir D√©tails <i class="fas fa-arrow-right ms-2"></i></a>
                                                </div>
                                            </span>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <!-- Pagination -->
                    <div class="pagination-container">
                        <div class="pagination custom-pagination-style-1 pagination-rounded">
                            {{ knp_pagination_render(quartiers) }}
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-info text-center mt-4">Aucun quartier trouv√©.</div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
