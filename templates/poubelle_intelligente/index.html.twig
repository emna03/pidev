{% extends 'baseBack.html.twig' %}

{% block title %}Poubelles Intelligentes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .purple-theme {
            background: linear-gradient(135deg, #f5f7ff 0%, #f5effb 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }
        
        .card-header {
            background: linear-gradient(90deg, #7e57c2 0%, #673ab7 100%);
            color: white;
            border: none;
        }
        
        .btn-purple {
            background-color: #673ab7;
            border-color: #5e35b1;
            color: white;
        }
        
        .btn-purple:hover {
            background-color: #5e35b1;
            border-color: #512da8;
            color: white;
        }
        
        .btn-outline-purple {
            color: #673ab7;
            border-color: #673ab7;
        }
        
        .btn-outline-purple:hover {
            background-color: #673ab7;
            color: white;
        }
        
        .page-title {
            color: #512da8;
            font-weight: 600;
            margin-bottom: 1.5rem;
            border-bottom: 2px solid #673ab7;
            padding-bottom: 0.5rem;
        }
        
        .table thead th {
            background-color: #9575cd;
            color: white;
            border-color: #7e57c2;
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(149, 117, 205, 0.1);
        }
        
        .badge-purple {
            background-color: #673ab7;
            color: white;
        }
        
        .fill-level-high {
            color: #d32f2f;
            font-weight: bold;
        }
        
        .fill-level-medium {
            color: #ff8f00;
            font-weight: bold;
        }
        
        .fill-level-low {
            color: #388e3c;
            font-weight: bold;
        }
        
        .action-btn {
            margin: 0 2px;
            min-width: 80px;
        }
        
        .trash-icon {
            margin-right: 5px;
        }
    </style>
{% endblock %}


{% block body %}
<div class="purple-theme">
    <div class="container">
        <div class="row mb-4">
            <div class="col d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-trash-alt me-2"></i>Poubelles Intelligentes
                </h1>
                <div class="alert-buttons">
                    <a href="{{ path('app_poubelle_intelligente_new') }}" class="btn btn-purple">
                        <i class="fas fa-plus me-2"></i>Nouvelle Poubelle
                    </a>
                    <form method="post" action="{{ path('app_poubelle_send_alert') }}">
                        <button type="submit" class="btn btn-warning" 
                                onclick="return confirm('Envoyer une alerte pour les poubelles >80%?')">
                            <i class="fas fa-bell me-2"></i>Envoyer Alerte
                        </button>
                    </form>
                    <form method="post" action="{{ path('app_poubelle_reset_alert') }}">
                        <button type="submit" class="btn btn-info btn-sm" 
                                title="Réinitialiser pour permettre un nouvel envoi">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="card shadow">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Liste des Poubelles
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Remplissage</th>
                                <th>Localisation</th>
                                <th>Coordonnées</th>
                                <th>Zone</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for poubelle in poubelle_intelligentes %}
                            <tr>
                              
                                <td>{{ poubelle.typeDechets }}</td>
                                <td>
                                    {% if poubelle.niveauRemplissage > 80 %}
                                        <span class="fill-level-high">{{ poubelle.niveauRemplissage }}% <i class="fas fa-exclamation-triangle"></i></span>
                                    {% elseif poubelle.niveauRemplissage > 50 %}
                                        <span class="fill-level-medium">{{ poubelle.niveauRemplissage }}%</span>
                                    {% else %}
                                        <span class="fill-level-low">{{ poubelle.niveauRemplissage }}%</span>
                                    {% endif %}
                                </td>
                                <td>{{ poubelle.localisation }}</td>
                                <td>
                                    <small class="text-muted">
                                        {{ poubelle.latitude|number_format(6) }}, {{ poubelle.longitude|number_format(6) }}
                                    </small>
                                </td>
                                <td>{{ poubelle.zoneId }}</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_poubelle_intelligente_show', {'id': poubelle.id}) }}" 
                                           class="btn btn-sm btn-outline-primary action-btn"
                                           data-bs-toggle="tooltip" title="Voir détails">
                                            <i class="fas fa-eye trash-icon"></i>View
                                        </a>
                                        <a href="{{ path('app_poubelle_intelligente_edit', {'id': poubelle.id}) }}" 
                                           class="btn btn-sm btn-outline-purple action-btn"
                                           data-bs-toggle="tooltip" title="Modifier">
                                            <i class="fas fa-edit trash-icon"></i>Edit
                                        </a>
                                        <form method="post" action="{{ path('app_poubelle_intelligente_delete', {'id': poubelle.id}) }}" 
                                              style="display: inline-block;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poubelle.id) }}">
                                            <button class="btn btn-sm btn-outline-danger action-btn"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette poubelle?')"
                                                    data-bs-toggle="tooltip" title="Supprimer">
                                                <i class="fas fa-trash-alt trash-icon"></i>Del
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Aucune poubelle intelligente trouvée. Créez votre première poubelle !
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Total: {{ poubelle_intelligentes|length }} poubelle(s)</span>
                    {# Add pagination here if needed #}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
{% endblock %}