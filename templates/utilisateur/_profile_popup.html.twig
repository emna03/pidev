<style>
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Noto Sans', sans-serif;
}

.profile-card {
  position: fixed;
  top: 70px;
  right: 20px;
  z-index: 9999;
  opacity: 0;
  transform: translateY(-20px) scale(0.9);
  transition: opacity 0.3s ease, transform 0.3s ease;
  display: block;
  pointer-events: none;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  border-radius: 20px;
  padding: 25px;
  width: 360px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  color: white;
}

.profile-card.show {
  opacity: 1;
  transform: translateY(0) scale(1);
  pointer-events: auto;
}

.profile-card img {
  display: block;
  margin: 0 auto 12px auto;
  border-radius: 50%;
  width: 100px;
  height: 100px;
  object-fit: cover;
}

.profile-card h3 {
  margin: 10px 0 4px;
  text-align: center;
   color: #000;
}

.profile-card span {
  font-size: 14px;
  color: #000;
  display: block;
  text-align: center;
}

.line {
  border-top: 1px solid #fff;
  margin: 15px 0;
}

.num {
  color: #000;
  font-weight: bold;
  display: block;
}

.profile_button {
  width: 100%;
  margin-top: 12px;
  padding: 10px;
  border: none;
  background: rgb(133, 97, 223);
  color: #fff;
  font-weight: bold;
  border-radius: 50px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.profile_button:hover {
  background: rgb(133, 97, 223);
}
.profile-card h5 {
  color: #8531df; /* Changer la couleur des titres (Email, Nom, Prénom) en mauve */
  font-weight: bold;
  text-align: center;
}
</style>

<div class="profile-card" id="profilePopup">
  <div class="text-center">
    {% if app.user %}
      <img src="{{ app.user.photoProfil ? asset('uploads/' ~ app.user.photoProfil) : 'https://i.imgur.com/stD0Q19.jpg' }}" alt="Avatar">
      <h3>{{ app.user.nom }} {{ app.user.prenom }}</h3>
      <span>{{ app.user.role }}</span>

           <div class="row mt-3">
          <div class="col-md-12">
              <h5>Email</h5>
              <span class="num">{{ app.user.email }}</span>
          </div>
      </div>

      <hr class="line">
      <a href="{{ path('app_profile_edit') }}">
        <button class="profile_button" type="button">Modifier le profil</button>
      </a>
      <a href="{{ path('app_logout') }}">
        <button class="profile_button">Se déconnecter</button>
      </a>

    {% else %}
      <img src="https://i.imgur.com/stD0Q19.jpg" alt="Avatar">
      <h3>Bienvenue invité</h3>
      <span>Vous n'êtes pas connecté</span>

      <hr class="line">
      <a href="#">
        <button class="profile_button">Se connecter</button>
      </a>
      <a href="#">
        <button class="profile_button">Créer un compte</button>
      </a>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("toggleProfile");
    const popup = document.getElementById("profilePopup");

    toggleBtn?.addEventListener("click", () => {
      popup.classList.toggle("show");
    });

    document.addEventListener("click", function (e) {
      if (!popup.contains(e.target) && !toggleBtn.contains(e.target)) {
        popup.classList.remove("show");
      }
    });
  });
</script>
