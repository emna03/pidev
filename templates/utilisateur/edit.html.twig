{% block javascripts %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const fileInput = document.getElementById('photoUpload');
    const previewImage = document.getElementById('preview-image');

    if (fileInput && previewImage) {
      fileInput.addEventListener('change', () => {
        const file = fileInput.files[0];
        if (file && file.type.startsWith('image/')) {
          const reader = new FileReader();
          reader.onload = e => previewImage.src = e.target.result;
          reader.readAsDataURL(file);
        }
      });
    }

    const form = document.getElementById('editForm');
    form.addEventListener('submit', function (e) {
      let valid = true;

      const nom = document.getElementById('{{ form.nom.vars.id }}');
      const prenom = document.getElementById('{{ form.prenom.vars.id }}');
      const email = document.getElementById('{{ form.email.vars.id }}');
      const tel = document.getElementById('{{ form.numero_telephone.vars.id }}');

      document.querySelectorAll('.error-msg').forEach(el => el.innerText = '');

      const emailRegex = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
      const telRegex = /^[0-9]{8,15}$/;

      if (!nom.value.trim()) {
        document.getElementById('nomError').innerText = 'Le nom est requis.';
        valid = false;
      }
      if (!prenom.value.trim()) {
        document.getElementById('prenomError').innerText = 'Le pr√©nom est requis.';
        valid = false;
      }
      if (!email.value.trim() || !emailRegex.test(email.value.trim())) {
        document.getElementById('emailError').innerText = 'Adresse email invalide.';
        valid = false;
      }
      if (!tel.value.trim() || !telRegex.test(tel.value.trim())) {
        document.getElementById('telephoneError').innerText = 'Num√©ro de t√©l√©phone invalide.';
        valid = false;
      }

      if (!valid) {
        e.preventDefault();
      }
    });
  });
 function submitDeactivate() {
    document.getElementById('actionInput').value = 'disable';
    document.getElementById('editForm').submit();
  }
</script>
{% endblock %}
