{% extends 'base.html.twig' %}

{% block title %}Ajouter un Document{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-primary mb-4">Ajouter un Document</h1>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="card shadow">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(form.nomDocument, {
                            'attr': {'class': 'form-control', 'placeholder': 'Nom du document'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.cheminFichier, {
                            'attr': {'class': 'form-control', 'placeholder': 'SÃ©lectionner un fichier'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.status, {
                            'attr': {'class': 'form-select', 'placeholder': 'Statut'}
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.remarque, {
                            'attr': {'class': 'form-control', 'placeholder': 'Remarque'}
                        }) }}
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Soumettre
                    </button>
                    <a href="{{ path('document_index') }}" class="btn btn-secondary ms-2">
                        Annuler
                    </a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger mt-3">{{ message }}</div>
    {% endfor %}
</div>
{% endblock %}