{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <h1 class="mb-4">Statut du Document : {{ document.nomDocument }}</h1>
    <a href="{{ path('document_index') }}" class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Retour à la liste des documents
    </a>
    <div class="card shadow mb-4">
        <div class="card-body">
            <h5 class="card-title">Détails</h5>
            <p><strong>Fichier :</strong> 
                {% if document.cheminFichier %}
                    <a href="{{ asset('uploads/' ~ document.cheminFichier) }}" target="_blank">Voir</a>
                {% else %}Aucun fichier{% endif %}
            </p>
            <p><strong>Date d'émission :</strong> {{ document.dateEmission|date('d/m/Y') }}</p>
            <p><strong>Remarque :</strong> {{ document.remarque|default('Aucune') }}</p>
        </div>
    </div>

    <div class="workflow-container">
        <h3 class="mb-3">Progression du document</h3>
        <div class="workflow-steps">
            {% set statuses = ['Brouillon', 'Validé', 'Archivé', 'Rejeté'] %}
            {% for status in statuses %}
                <div class="step {% if document.status == status %}active{% endif %}">
                    <div class="step-number">{{ loop.index }}</div>
                    <div class="step-name">{{ status }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .workflow-steps {
            display: flex;
            gap: 40px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .step {
            text-align: center;
            opacity: 0.4;
            transition: opacity 0.3s;
        }

        .step.active {
            opacity: 1;
            font-weight: bold;
            color: #28a745;
        }

        .step-number {
            width: 40px;
            height: 40px;
            background: #f8f9fa;
            border: 2px solid #ddd;
            border-radius: 50%;
            margin: 0 auto 10px;
            line-height: 40px;
            font-size: 16px;
        }

        .step.active .step-number {
            border-color: #28a745;
            background: #d4edda;
        }
    </style>
{% endblock %}