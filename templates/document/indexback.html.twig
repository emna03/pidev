{% extends 'baseback.html.twig' %}

{% block body %}
<div class="container mt-4">
    <br>
    <br>
    <br>
    <br>
    <br>
    <h1 class="mb-4">Documents Administratifs</h1>
   

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Fichier</th>
                <th>Date</th>
                <th>Status</th>
                <th>Remarque</th>
                <th>Jours depuis Ã©mission</th>
                <th>Traduire en anglai</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for document in documents %}
            <tr>
                <td>{{ document.nomDocument }}</td>
                <td>
                    {% if document.cheminFichier %}
                        <a href="{{ asset('uploads/' ~ document.cheminFichier) }}" target="_blank">Voir le fichier</a>
                    {% else %}
                        Pas de fichier
                    {% endif %}
                </td>
                
                <td>{{ document.dateEmission|date('Y-m-d') }}</td>
                <td>{{ document.status }}</td>
                <td>{{ document.remarque }}</td>
                <td>{{ (date()|date('U') - document.dateEmission|date('U')) // 86400 }} jours</td>
                <td>
                    <div class="remarque-container">
                        <span class="original-remarque">{{ document.remarque }}</span>
                        <button class="btn btn-sm btn-secondary translate-btn" 
                                data-remarque="{{ document.remarque }}">
                            Traduire
                        </button>
                    </div>
                </td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('document_modify_status', {'id': document.id}) }}" class="btn btn-warning btn-sm">
                            Modifier le statut
                        </a>
                        <form action="{{ path('document_delete_back', {'id': document.id}) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ document.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<script src="{{ asset('js/translation.js') }}"></script>
{% endblock %}