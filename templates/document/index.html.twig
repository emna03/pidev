{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <h1 class="mb-4">Documents Administratifs</h1>

    <!-- Add from Image Button -->
<div class="mb-3">
    <label id="upload-label" for="image-upload" class="btn btn-success">Ajouter un document depuis une image</label>
    <input type="file" id="image-upload" accept="image/*" style="display: none;" />
</div>

    <!-- Existing Table -->
    <a href="{{ path('document_new') }}" class="btn btn-primary mb-3">Créer un nouveau document</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Fichier</th>
                <th>Date</th>
                <th>Remarque</th>
                <th>Traduire en anglais</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for document in documents %}
            <tr>
                <td>{{ document.nomDocument }}</td>
                <td>
                    {% if document.cheminFichier %}
                        <a href="{{ asset('uploads/' ~ document.cheminFichier) }}" target="_blank">Voir le fichier</a>
                    {% else %}
                        Pas de fichier
                    {% endif %}
                </td>
                <td>{{ document.dateEmission|date('Y-m-d') }}</td>
                <td>{{ document.remarque }}</td>
                <td>
                    <div class="remarque-container">
                        <span class="original-remarque">{{ document.remarque }}</span>
                        <button class="btn btn-sm btn-secondary translate-btn" 
                                data-remarque="{{ document.remarque }}">
                            Traduire
                        </button>
                    </div>
                </td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('document_status', {'id': document.id}) }}" class="btn btn-info btn-sm">
                            Vérifier le statut
                        </a>
                        {% if document.status == 'Brouillon' %}
                        <a href="{{ path('document_edit', {'id': document.id}) }}" class="btn btn-warning btn-sm">
                            Modifier
                        </a>
                        {{ include('document/_delete_form.html.twig', {'document': document}) }}
                        {% endif %}
                        <a href="{{ path('document_pdf', {'id': document.id}) }}" target="_blank" class="btn btn-success btn-sm">Générer PDF</a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script src="{{ asset('js/translation.js') }}"></script>
<script src="{{ asset('js/ocr.js') }}"></script>

{% endblock %}