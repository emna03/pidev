{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <br>
    <br>
    <br>
    <br>
    <br>
    <h1 class="mb-4">Documents Administratifs</h1>
   
    <a href="{{ path('document_new') }}" class="btn btn-primary mb-3">Créer un nouveau document</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Fichier</th>
                <th>Date</th>
                <th>Statut</th>
                <th>Remarque</th>
                <th>Jours depuis émission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for document in documents %}
            <tr>
                <td>{{ document.nomDocument }}</td>
                <td>
                    {% if document.cheminFichier %}
                        <a href="{{ asset('uploads/' ~ document.cheminFichier) }}" target="_blank">Voir le fichier</a>
                    {% else %}
                        Pas de fichier
                    {% endif %}
                </td>
                <td>{{ document.dateEmission|date('Y-m-d') }}</td>
                <td>{{ document.status }}</td>
                <td>{{ document.remarque }}</td>
                <td>{{ (date()|date('U') - document.dateEmission|date('U')) // 86400 }} jours</td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('document_show', {'id': document.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('document_edit', {'id': document.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        {{ include('document/_delete_form.html.twig', {'document': document}) }}
                        <!-- Add a Generate PDF button -->
                        <a href="{{ path('document_pdf', {'id': document.id}) }}" target="_blank" class="btn btn-success btn-sm">Générer PDF</a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}