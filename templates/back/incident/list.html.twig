{% extends 'base_admin.html.twig' %}

{% block title %}Gestion des Incidents{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">Liste des Incidents</h1>

        <div class="row">
            {% for incident in incidents %}
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    
                             <h5 class="card-title">{{ incident.typeIncident }}</h5>
                <p class="card-text"><strong>Description:</strong> {{ incident.description }}</p>
                <p class="card-text"><strong>Localisation:</strong> {{ incident.localisation }}</p>
                <p class="card-text"><strong>Statut:</strong> {{ incident.statut }}</p>
                <p class="card-text"><strong>Utilisateur:</strong> {{ incident.user.nom }} {{ incident.user.prenom }}</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun incident Ã  afficher.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
