{% extends 'base.html.twig' %}

{% block body %}
<div class="body">
    <div role="main" class="main px-3 px-lg-5">
        <div class="container mt-5">
            <div class="page-header py-0 px-3 px-xl-0 border-radius-2 p-relative mb-5" style="background-color:rgb(166, 146, 253)">
                <div class="overflow-hidden p-absolute top-0 left-0 bottom-0 h-100 w-100">
                    <div class="custom-el-5 custom-pos-4">
                        <img class="img-fluid opacity-2 opacity-hover-2" src="{{ asset('img/demos/accounting-1/svg/waves.svg') }}" alt="">
                    </div>
                </div>                    
                <div class="container p-relative z-index-1 py-2">
                    <div class="row align-items-center py-4">
                        <div class="col-8 col-md-7">
                            <div class="appear-animation" data-appear-animation="fadeInRightShorter" data-appear-animation-delay="0">
                                <span class="badge bg-color-dark-rgba-10 text-light rounded-pill text-uppercase font-weight-semibold text-2-5 px-3 py-2 px-4 mb-3">
                                    <span class="d-inline-flex py-1 px-2">Historique</span>
                                </span>
                            </div>
                            <div class="appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="200">
                                <h1 class="text-dark text-9 text-lg-12 font-weight-semibold line-height-1 mb-2">votre incident</h1>
                            </div>
                            <div class="appear-animation" data-appear-animation="fadeIn" data-appear-animation-delay="200">
                              <div class="col-8 col-md-7">
                            <h1 class="text-dark text-9 font-weight-semibold line-height-1 mb-2">Historique des Incidents</h1>
                            <ul class="breadcrumb d-flex text-3-5 font-weight-semi-bold pb-2 mb-3">
                                <li class="active">Liste des incidents résolus </li>
                            </ul>
                        </div>
                            </div>
                            <div class="appear-animation" data-appear-animation="fadeInUpShorter" data-appear-animation-delay="800">
                                <div class="d-flex pt-4 align-items-center">
                                    <a href="{{ path('app_incident_new') }}" class="btn btn-rounded btn-dark box-shadow-7 font-weight-medium btn-swap-1" data-clone-element="1">
                                        <span>Signaler un Incident <i class="fa-solid fa-arrow-right ms-2 p-relative left-10"></i></span>
                                    </a>
                                    <a href="{{ path('app_incident_historique') }}" class="btn btn-rounded btn-outline-dark box-shadow-7 font-weight-medium btn-swap-1" data-clone-element="1">
                                        <span>Historique <i class="fa-solid fa-clock-rotate-left ms-2 p-relative left-10"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Afficher tous les incidents -->
            <div class="card shadow-sm p-4 border-0 rounded-4">
                <div class="row">
                    {% set hasResolved = false %}
                    {% for incident in incidents %}
                        {% if incident.statut == 'Résolu' %}
                            {% set hasResolved = true %}
                            <div class="col-lg-4 col-md-4 col-sm-12 mb-4 pb-1">
                                <div class="box-shadow-7 border-radius-2 overflow-hidden">
                                    <span class="thumb-info thumb-info-no-overlay thumb-info-show-hidden-content-hover">
                                        <span class="thumb-info-wrapper overlay overlay-show overlay-gradient-bottom-content border-radius-0 rounded-top">
                                            <a href="{{ path('app_incident_show', {'id': incident.id}) }}" title="Voir Détails">
                                                <img src="{{ asset('uploads/' ~ incident.image) }}" alt="Incident Image" class="img-fluid rounded" style="max-width: 100%;">
                                            </a>
                                            
                                        </span>                                                
                                        <span class="thumb-info-content">
                                            <span class="thumb-info-content-inner bg-light p-4">
                                                <h4 class="text-5 mb-2">{{ incident.typeIncident }}</h4>

                                                <p class="line-height-7 text-3 mb-3">
                                                    <strong>Description :</strong> {{ incident.description }}
                                                </p>

                                                <p class="line-height-7 text-3 mb-3">
                                                    <strong>Localisation :</strong> {{ incident.localisation }}
                                                </p>

                                                <p class="line-height-7 text-3 mb-3">
                                                    <strong>Statut :</strong>
                                                    <span style="color: green;">{{ incident.statut }}</span>
                                                </p>

                                                <div class="mt-3">
                                                    <a href="{{ path('app_incident_show', {'id': incident.id}) }}" class="btn btn-primary btn-sm">
                                                        Voir Détails
                                                        <i class="fas fa-arrow-right ms-2"></i>
                                                    </a>
                                                      </a>
                                <!-- Ajouter le bouton de suppression -->
                                <a href="{{ path('app_incident_delete', {'id': incident.id}) }}" 
                                   class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet incident ?');">
                                   Supprimer
                                   <i class="fas fa-trash ms-2"></i>
                                </a>
                                
                                                </div>
                                            </span>
                                        </span>
                                    </span>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                    {% if not hasResolved %}
                        <p class="text-center">Aucun incident résolu pour le moment.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
