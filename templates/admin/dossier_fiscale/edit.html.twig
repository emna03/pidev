{% extends 'base_admin.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .card.admin-card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
        }

        .admin-card-header {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 2rem;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .admin-card-header h3 {
            margin: 0;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 0.5rem;
            height: 45px;
            padding: 0.5rem 1rem;
            box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #6a11cb;
            box-shadow: 0 0 0 0.2rem rgba(106, 17, 203, 0.25);
        }

        .form-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn-save {
            background: linear-gradient(135deg, #42e695 0%, #3bb2b8 100%);
            color: white;
            font-weight: 600;
            padding: 10px 24px;
            border-radius: 0.5rem;
            border: none;
            transition: background 0.3s;
        }

        .btn-save:hover {
            background: linear-gradient(135deg, #3bb2b8 0%, #42e695 100%);
        }

        .btn-cancel {
            background-color: #dee2e6;
            color: #333;
            font-weight: 500;
            padding: 10px 20px;
            border-radius: 0.5rem;
            text-decoration: none;
        }

        .btn-cancel:hover {
            background-color: #ced4da;
            color: #000;
        }
    </style>
{% endblock %}

{% block title %}Ajouter un Dossier Fiscale{% endblock %}

{% block body %}
<div class="container my-5 form-container">
    <div class="card admin-card">
        <div class="admin-card-header">
            <h3><i class="fas fa-folder-plus me-2"></i> modifier un Dossier Fiscale</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row g-3">
                    {% for field in form %}
                        {% if field.vars.name != '_token' %}
                            <div class="col-md-6">
                                {{ form_label(field) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(field) }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <button class="btn btn-primary"><i class="fas fa-save"></i> Sauvegarder les modifications</button>

                    {{ form_end(form) }}

                    <form method="post" action="{{ path('admin_dossier_fiscale_delete', {'id': dossier_fiscale.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier_fiscale.id) }}">
                        <button class="btn btn-danger"><i class="fas fa-trash-alt"></i> Supprimer</button>
                    </form>
                </div>
        </div>
    </div>
</div>
{% endblock %}
