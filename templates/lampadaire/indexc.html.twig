{% extends 'base_admin.html.twig' %}

{% block title %}Lampadaires publics{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Lampadaires Publics</h1>

    <!-- üîç Barre de filtrage par date -->
    <form method="get" class="row g-3 align-items-end mb-4">
        <div class="col-md-4">
            <label for="date" class="form-label">Filtrer par date d'installation :</label>
            <input type="date" id="date" name="date" class="form-control" value="{{ selectedDate }}">
        </div>
        <div class="col-md-4">
            <label for="mode" class="form-label">Mode :</label>
            <select name="mode" id="mode" class="form-select">
                <option value="">-- Choisir --</option>
                <option value="before" {% if selectedMode == 'before' %}selected{% endif %}>Avant la date</option>
                <option value="after" {% if selectedMode == 'after' %}selected{% endif %}>Apr√®s la date</option>
                <option value="on" {% if selectedMode == 'on' %}selected{% endif %}>Le jour m√™me</option>
            </select>
        </div>
        <div class="col-md-4 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Appliquer</button>
            <a href="{{ path('citizen_lampadaire_index') }}" class="btn btn-outline-secondary">R√©initialiser</a>
        </div>
    </form>

    {% if lampadaires is not empty %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for lampadaire in lampadaires %}
                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Lampadaire #{{ lampadaire.id }}</h5>
                            <p class="card-text"><strong>Localisation :</strong> {{ lampadaire.localisation }}</p>
                            <p class="card-text"><strong>Consommation :</strong> {{ lampadaire.consommation }} kWh</p>
                            <p class="card-text"><strong>Date d'installation :</strong> {{ lampadaire.dateInstallation|date('d/m/Y') }}</p>
                            <p class="card-text"><strong>Quartier :</strong> {{ lampadaire.quartier.nom ?? 'Non sp√©cifi√©' }}</p>
                            <p class="card-text">
                                <strong>√âtat :</strong>
                                {% if lampadaire.etat %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </p>
                            <a href="{{ path('citizen_lampadaire_show', {'id': lampadaire.id}) }}" class="btn btn-outline-primary btn-sm mt-2">Voir les d√©tails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun lampadaire trouv√©.</p>
    {% endif %}
</div>
{% endblock %}
