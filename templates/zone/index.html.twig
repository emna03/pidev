{% extends 'base_admin.html.twig' %}

{% block title %}Zone index{% endblock %}

{% block body %}
    <h1>Zone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Location</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.location }}</td>
                <td>{{ zone.latitude }}</td>
                <td>{{ zone.longitude }}</td>
                <td>
                    <a href="{{ path('zone_show', {'id': zone.id}) }}">show</a>
                    <a href="{{ path('zone_edit', {'id': zone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('zone_new') }}">Create new</a>
{% endblock %}