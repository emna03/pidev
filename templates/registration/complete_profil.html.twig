<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Compléter le profil</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }
        body {
            background: #080710;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
        }
        .progress-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }
        .step {
            text-align: center;
        }
        .circle {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #ccc;
            color: white;
            line-height: 30px;
            font-weight: bold;
            margin: 0 auto;
        }
        .step.active .circle {
            background-color: #4caf50;
        }
        .step p {
            margin-top: 6px;
            font-size: 13px;
            color: white;
        }
        .line {
            width: 60px;
            height: 3px;
            background-color: #ccc;
            margin: 0 10px;
        }
        .step.active + .line {
            background-color: #4caf50;
        }
        .background {
            width: 300px;
            height: 400px;
            position: absolute;
            transform: translate(-50%, -50%);
            left: 50%;
            top: 50%;
        }
        .background .shape {
            height: 150px;
            width: 150px;
            position: absolute;
            border-radius: 50%;
        }
        .shape:first-child {
            background: linear-gradient(#1845ad, #23a2f6);
            left: -60px;
            top: -60px;
        }
        .shape:last-child {
            background: linear-gradient(to right, #ff512f, #f09819);
            right: -20px;
            bottom: -60px;
        }
        form {
            width: 360px;
            background-color: rgba(255, 255, 255, 0.13);
            position: relative;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
            padding: 30px 25px;
            color: #fff;
            z-index: 2;
        }
        form * {
            font-family: 'Poppins', sans-serif;
            letter-spacing: 0.5px;
            outline: none;
            border: none;
        }
        form h3 {
            font-size: 22px;
            font-weight: 500;
            text-align: center;
            margin-bottom: 20px;
        }
        label {
            font-size: 13px;
            margin-top: 15px;
            display: block;
        }
        input, select {
            height: 38px;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.07);
            border-radius: 3px;
            padding: 0 8px;
            margin-top: 6px;
            font-size: 13px;
            color: #fff;
        }
        input[type="file"] {
            padding-top: 8px;
        }
        button {
            margin-top: 24px;
            width: 100%;
            background-color: #fff;
            color: #080710;
            padding: 10px 0;
            font-size: 16px;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s ease;
        }
        .error-message {
            color: red;
            font-size: 13px;
            margin-top: 6px;
        }
        select {
        height: 38px;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.07);
        border-radius: 3px;
        padding: 0 8px;
        margin-top: 6px;
        font-size: 13px;
        color: #fff; /* Couleur du texte */
    }
    select option {
        color: #000; /* Couleur des options dans la liste déroulante */
    }
     @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    animation: fadeIn 0.6s ease forwards;
  }
  @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.6s ease forwards;
        }
    </style>
    
<body class="fade-in">
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    <form method="POST" enctype="multipart/form-data" id="completeProfileForm">
    <h3>Compléter le profil</h3>
    <div class="progress-container">
        <div class="step active">
            <div class="circle">1</div>
            <p>Compte</p>
        </div>
        <div class="line"></div>
        <div class="step active">
            <div class="circle">2</div>
            <p>Profil</p>
        </div>
    </div>
    {% for message in app.flashes('error') %}
        <div class="error-message">{{ message }}</div>
    {% endfor %}

    <label for="nom">Nom</label>
    <input type="text" name="nom" id="nom" placeholder="Votre nom">

    <label for="prenom">Prénom</label>
    <input type="text" name="prenom" id="prenom" placeholder="Votre prénom">

    <label for="role">Rôle</label>
    <select name="role" id="role">
        <option value="">Sélectionnez un rôle</option>
        <option value="Citoyen">Citoyen</option>
        <option value="Admin">Admin</option>
    </select>

    <label for="numero_telephone">Numéro de téléphone</label>
    <input type="text" name="numero_telephone" id="numero_telephone" placeholder="+213...">

    <label for="photo_profil">Photo de profil</label>
    <input type="file" name="photo_profil" id="photo_profil" accept="image/*">

    <button type="submit">Enregistrer</button>
</form>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("completeProfileForm");

    form.addEventListener("submit", function (e) {
      document.querySelectorAll(".error-message.dynamic").forEach(el => el.remove());

      const nom = document.getElementById("nom");
      const prenom = document.getElementById("prenom");
      const role = document.getElementById("role");
      const numeroTelephone = document.getElementById("numero_telephone");
      let valid = true;

      function showError(input, message) {
        const div = document.createElement("div");
        div.className = "error-message dynamic";
        div.innerText = message;
        input.parentNode.insertBefore(div, input.nextSibling);
      }

      if (!nom.value.trim() || nom.value.length < 2) {
        showError(nom, "Nom invalide (min 2 lettres)");
        valid = false;
      }

      if (!prenom.value.trim() || prenom.value.length < 2) {
        showError(prenom, "Prénom invalide (min 2 lettres)");
        valid = false;
      }

      if (!role.value) {
        showError(role, "Veuillez sélectionner un rôle");
        valid = false;
      }

      if (numeroTelephone.value && !/^\+?\d{10,15}$/.test(numeroTelephone.value)) {
        showError(numeroTelephone, "Numéro de téléphone invalide");
        valid = false;
      }

      if (!valid) e.preventDefault();
    });
  });
    document.addEventListener("DOMContentLoaded", function () {
    const container = document.querySelector(".container");
    container.classList.add("fade-in");
</script>

</body>
</html>